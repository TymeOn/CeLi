<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/light_accent_trsp"
                        android:centerColor="@color/accent_trsp"
                        android:endColor="@color/dark_accent_trsp"
                        android:type="linear" />
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/light_accent"
                        android:centerColor="@color/accent"
                        android:endColor="@color/dark_accent"
                        android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/light_accent_trsp"
                        android:centerColor="@color/accent_trsp"
                        android:endColor="@color/dark_accent_trsp"
                        android:angle="270" />
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/light_accent"
                        android:centerColor="@color/accent"
                        android:endColor="@color/dark_accent"
                        android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
